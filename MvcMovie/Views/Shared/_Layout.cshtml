                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Movies" asp-action="Index" class="navbar-brand">
                    <img src="~/images/biesse.jpg" />
                </a> @* asp-controller="Home" *@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-area="" asp-controller="Movies" asp-action="Index">Movies</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="About">About</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
                    <li><a asp-area="" asp-controller="HelloWorld" asp-action="Prova/28?name=Mic">My Movies 1</a></li>
                    <li><a asp-area="" asp-controller="HelloWorld" asp-action="Prova?id=28&name=Mic">My Movies 2</a></li>
                    <li><a asp-area="" asp-controller="SPA" asp-action="Index">SPA Page</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
